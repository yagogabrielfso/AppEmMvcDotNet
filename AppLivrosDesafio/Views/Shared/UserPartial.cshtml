@using AppLivrosDesafio.Data.Models;
@model User

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1>@Model.Name</h1>
        </div>
        <div class="panel-body">
            <h2>Book count: @Model.Books?.Count</h2>
            <div class="btn-group">
                @if (Model.Books?.Count == 0)
                {
                    <a class="btn btn-default" asp-area="">View book list</a>
                }
                else
                {
                    <a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="List" asp-route-userId="@Model.UserId">View book list</a>
                }
                <a class="btn btn-info" asp-area="" asp-controller="User" asp-action="Update" asp-route-id="@Model.UserId">Edit</a>
                <a class="btn btn-danger" asp-area="" asp-controller="User" asp-action="Delete" asp-route-id="@Model.UserId">Delete</a>
            </div>
        </div>
    </div>
</div>