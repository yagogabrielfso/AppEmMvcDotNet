@using AppLivrosDesafio.Data.Models;
@model IEnumerable<Book>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Book" asp-action="Create">Create new book</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users name</th>
            <th>View book</th>
            <th>Delete book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model.OrderByDescending(i=>i.Title))
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.User.Name</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="ViewBook" asp-route-id="@book.BookId">View Book</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Book" asp-action="Delete" asp-route-id="@book.BookId" asp-route-userId="@ViewBag.UserId">Delete</a></td>
            </tr>
        }
    </tbody>  
    <div>    
    @*Não está do jeito ideal, fiz só para funcionalidade pois faltam minutos para o prazo*@
    <a class="btn btn-success mt-5" type="submit" value="Return" style="margin: 10px" asp-controller="Book" asp-action="ListOrderAZ">A-Z</a>    
    <a class="btn btn-success mt-5" type="submit" value="Return" style="margin: 10px" asp-controller="Book" asp-action="ListOrderZA">Z-A</a>    
    </div>
</table>
