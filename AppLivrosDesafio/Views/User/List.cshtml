@using AppLivrosDesafio.Data.Models;
@model IEnumerable<User>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="User" asp-action="Create">Create new user</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Books count</th>
            <th>View book list</th>
            <th>Edit user</th>
            <th>Delete user</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Name</td>
                <td>@user.Books?.Count </td>
                @if (user.Books?.Count == 0)
                {
                    <td><a class="btn btn-default" asp-area="" >View book list</a></td>
                }
                else
                {
                    <td><a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="List" asp-route-userId="@user.UserId">View book list</a></td>
                }
                <td><a class="btn btn-info" asp-area="" asp-controller="User" asp-action="Update" asp-route-id="@user.UserId">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>